---
apiVersion: v1
kind: Pod
metadata:
  name: alpine
  namespace: home
spec:
  containers:
  - image: alpine:3.2
    command:
    - /bin/sh
    - "-c"
    - "apk update && apk add openssh && apk add rsync && sleep 600000000m"
    imagePullPolicy: IfNotPresent
    name: alpine
    volumeMounts:
    - mountPath: "/config"
      name: config-pvc
  restartPolicy: Always
  volumes:
    - name: config-pvc
      persistentVolumeClaim:
       claimName: config-node-red
